<div class="post">
  <div class="post-contents">
    <div class="post-info-container">
      <a href="/{{@index}}" class="post-title">{{description}}</a>
    </div>
    <div class="post-image-container">
      <img src="{{photoURL}}" alt="{{description}}">
    </div>
    <div class="post-comment-container">
      <p>{{comment}}</p>
    </div>
  </div>
</div>
